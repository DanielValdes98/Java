import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.ItemEvent;
import java.awt.event.ItemListener;

import javax.swing.JFormattedTextField;
import javax.swing.JTextField;
import javax.swing.JTextPane;
import javax.swing.JComboBox;
import javax.swing.SwingConstants;
import javax.swing.JButton;

public class Conversor extends JFrame{
	
	private static String ocpiones,tipo;
	private static double valor;
	private double resultado;
	
	public Conversor(String tipo) {		
		Conversor.setTipo(tipo);
	}
	
	public String getOcpiones() {
		return ocpiones;
	}
	public void setOcpiones(String ocpiones) {
		Conversor.ocpiones = ocpiones;
	}
	public double getValor() {
		return valor;
	}
	public void setValor(double valor) {
		Conversor.valor = valor;
	}

	public double getResultado() {
		return resultado;
	}

	public void setResultado(double resultado) {
		this.resultado = resultado;
	}	
	
	// Metodo principal que ejecuta todo
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					if(getTipo() == "Conversor de monedas") {
						ConversorMonedas frame = new ConversorMonedas(tipo);
						frame.setVisible(true);
					} else if(getTipo() == "Conversor de temperatura") {
						Conversor frame = new ConversorMonedas(tipo);
						frame.setVisible(true);
					}
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	} // end main method

	public static String getTipo() {
		return tipo;
	}

	public static void setTipo(String tipo) {
		Conversor.tipo = tipo;
	}
}
