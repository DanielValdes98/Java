	public Conversor(String opciones, double valor) {
		Conversor.ocpiones = opciones;
		Conversor.valor = valor;
		
		// UI
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 298, 331);
		contentPane = new JPanel();
